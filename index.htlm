    <button onclick="answer(event)">Oui ğŸ˜</button>
    <button onclick="answer(event)">Ã‰videmment ğŸ’–</button>
  </div>
</div>

<script>
function openEnvelope() {
  document.querySelector('.envelope').classList.add('open');
  document.getElementById('music').play();
  setInterval(createHeart, 500);
}

function answer(e) {
  e.stopPropagation();
  alert("ğŸ’˜ J'Ã©tais sÃ»r que tu dirais oui ğŸ’˜");
